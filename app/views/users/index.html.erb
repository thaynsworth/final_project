
<div class="cloud">
	<div class="sun">
		<div class="city">
			<h1>WalkSafe</h1>
			<div class="box">
				<div class="stuff_in_box">
					<%= link_to 'Crime Map', crimes_path %>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	
// Adds the click function	
// $("body").click(function() {
//     $(this).toggleClass('clicked');
// });

function cloud(){
	var cloud = $("<img class='cloud' src='./cloud_PNG2.png'>");
	$('div.cloud').append(cloud);
	cloud.css({
		position: 'relative',
		'padding-top': '100px',
  	height: '35%',
  	width: '20%',
  	left: '-500px',
		'z-index': '1',
		display: 'block'
	});
	cloud.delay(10000);
	cloud.animate({
		left: '500px'
	}, 11000);
}


function sunRise(){
  var sunshine = $("<img class='sunshine' src='./sun.png'>");
  $('div.sun').append(sunshine);
  sunshine.css({
  	position: 'relative',
  	height: '30%',
  	width: '15%',
  	float: 'right',
  	bottom: '-600px',
  	'z-index': '1',
  	display: 'block'
  });
  sunshine.animate({
  	bottom: '5px'
  }, 9000);
}

$(function(){

	$("body").toggleClass('sky');

	cloud();
	sunRise();
	

})

</script>