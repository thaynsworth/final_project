	// 	$( this ).hover(
	//   	function() {
	//   		$( this ).addClass( "hover" );
	//   	}, function() {
	//   		$( this ).removeClass( "hover" );
	//   	}
	// 	);
	// }
	
	$(function(){

		$("body").toggleClass('sky');
		cloud1();
		cloud2();
		sunRise();

		$("#login").click(function(){
			loginWindow();
			removeMainBox();
		});			
		$("#signup").click(function(){
			signupWindow();
			removeMainBox();
		});	
		$("#about").click(function(){
			aboutWindow();
			removeMainBox();
		});	
		$("#profile").click(function(){
			profileWindow();
			removeMainBox();
		});			
		$("#login_cancel").click(function(){
			loginWindow();
			removeMainBox();
		});
		$("#signup_cancel").click(function(){
			signupWindow();
			removeMainBox();
		});
		$("#about_cancel").click(function(){
			aboutWindow();
			removeMainBox();
		});		
		$("#profile_cancel").click(function(){
			profileWindow();
			removeMainBox();
		});							
	});

</script>