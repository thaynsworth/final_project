<div class="cloud2">
	<div class="cloud1">
		<div class="sun">
			<div class="city">
				<h1>WalkSafe</h1>
				<div class="box">
					<div class="stuff_in_box">
						<%= link_to 'Crime Map', crimes_path %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	
// Adds the click function	
// $("body").click(function() {
//     $(this).toggleClass('clicked');
// });

function cloud1(){
	var cloud1 = $("<img class='cloud1' src='./cloud4.png'>");
	$('div.cloud1').append(cloud1);
	cloud1.css({
		position: 'relative',
		'padding-top': '60px',
  	height: '60%',
  	width: '50%',
  	left: '-500px',
		'z-index': '1',
		display: 'block'
	});
	cloud1.delay(3000);
	cloud1.animate({
		left: '400px'
	}, 27000);
}

function cloud2(){
	var cloud2 = $("<img class='cloud2' src='./cloud3.png'>");
	$('div.cloud2').append(cloud2);
	cloud2.css({
		position: 'relative',
		'padding-top': '40px',
  	height: '40%',
  	width: '30%',
  	left: '-500px',
		'z-index': '1',
		display: 'block'
	});
	cloud2.delay(2000);
	cloud2.animate({
		left: '200px'
	}, 27000);
}


function sunRise(){
  var sunshine = $("<img class='sunshine' src='./sun.png'>");
  $('div.sun').append(sunshine);
  sunshine.css({
  	position: 'relative',
  	height: '30%',
  	width: '15%',
  	float: 'right',
  	bottom: '-600px',
  	'z-index': '1',
  	display: 'block'
  });
  sunshine.animate({
  	bottom: '5px'
  }, 9000);
}

$(function(){

	$("body").toggleClass('sky');
	cloud1();
	cloud2();
	sunRise();
	

})

</script>