function sunRise(){
  var sunshine = $("<img class='sunshine' src='./sun.png'>");
  $('body').append(sunshine);
  sunshine.css({
  	position: 'relative',
  	height: '30%',
  	width: '15%',
  	float: 'right',
  	bottom: '-250px',
  	'z-index': '1'
  });
  sunshine.animate({
  	bottom: '270px'
  }, 8000);
}

$(function(){

	$("body").toggleClass('clicked');
	sunRise();

})

</script>